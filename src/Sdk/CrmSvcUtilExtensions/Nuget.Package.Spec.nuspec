		    <group targetFramework=".NETFramework4.6.2">
				<dependency id="Microsoft.CrmSdk.CoreAssemblies" version="9.0.2.29" include="contentFiles, build" />
				<dependency id="Microsoft.CrmSdk.CoreTools" version="9.1.0.64" />
			</group>
		</dependencies>
	</metadata>
